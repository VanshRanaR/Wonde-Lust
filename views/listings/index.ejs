<% layout("/layouts/boilerplate") %>
<body>


   <!-- Filter Bar -->
   <div class="filter-bar-wrapper">
      <button class="scroll-btn left" onclick="scrollFilters(-200)"><i class="fas fa-chevron-left"></i></button>
      <div class="filter-bar" id="filterBar">
         <div class="filter"><i class="fas fa-dollar-sign"></i><span>Price</span></div>
         <div class="filter"><i class="fas fa-home"></i><span>Rooms</span></div>
         <div class="filter"><i class="fas fa-dog"></i><span>Pets</span></div>
         <div class="filter"><i class="fas fa-swimming-pool"></i><span>Pool</span></div>
         <div class="filter"><i class="fas fa-tree"></i><span>Outdoors</span></div>
         <div class="filter"><i class="fas fa-wifi"></i><span>Wi-Fi</span></div>
         <div class="filter"><i class="fas fa-snowflake"></i><span>AC</span></div>
         <div class="filter"><i class="fas fa-parking"></i><span>Parking</span></div>
         <div class="filter"><i class="fas fa-utensils"></i><span>Kitchen</span></div>
         <div class="filter"><i class="fas fa-umbrella-beach"></i><span>Beachfront</span></div>
         <div class="filter"><i class="fas fa-spa"></i><span>Luxury</span></div>
         <div class="filter"><i class="fas fa-fire"></i><span>Fireplace</span></div>
         <div class="filter"><i class="fas fa-mountain"></i><span>Mountain</span></div>
         <div class="filter"><i class="fas fa-city"></i><span>City View</span></div>
         <div class="filter"><i class="fas fa-bicycle"></i><span>Adventure</span></div>
         <div class="filter"><i class="fas fa-skiing"></i><span>Ski-in/out</span></div>
         <div class="filter"><i class="fas fa-tv"></i><span>TV</span></div>
         <div class="filter"><i class="fas fa-bed"></i><span>King Bed</span></div>
      </div>
      <button class="scroll-btn right" onclick="scrollFilters(200)"><i class="fas fa-chevron-right"></i></button>
   </div>

   <!-- Listings -->
   <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 mt-3">
      <% for (let listing of allListings) { %>
         <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
            <div class="card col mb-4" style="position: relative; overflow: hidden; border-radius: 1rem;">
               <img src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" 
                    class="card-img-top" 
                    alt="listing_image" 
                    style="height: 20rem; object-fit: cover; border-radius: 1rem;">
               <div class="card-body">
                  <p class="card-text">
                     <strong><%= listing.title || "No Title" %></strong><br>
                     <% if (listing.price != null) { %>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                     <% } else { %>
                        <span class="text-muted">Price not available</span>
                     <% } %>
                  </p>
               </div>
            </div>
         </a>
      <% } %>
   </div>

   <!-- FontAwesome + Scroll Script -->
   <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
   <script>
      function scrollFilters(amount) {
         document.getElementById("filterBar").scrollBy({ left: amount, behavior: 'smooth' });
      }
   </script>
</body>
