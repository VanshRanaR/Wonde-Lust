<% layout("/layouts/boilerplate") %>
<body class="container mt-5">
    <h3 class="mb-4">Create a New Listing</h3>

    <!-- Form with file upload enabled -->
    <form method="POST" action="/listings" class="p-4 border rounded shadow-sm bg-light needs-validation" novalidate  
    enctype="multipart/form-data">
        
        <!-- Title -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" id="title" class="form-control" placeholder="Enter title" required>
            <div class="valid-feedback">Title looks good.</div>
            <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" class="form-control" placeholder="Enter description" rows="3" required></textarea>
            <div class="valid-feedback">Description looks good.</div>
            <div class="invalid-feedback">Please enter a description.</div>
        </div>

        <!-- Image Upload (file instead of URL + filename) -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input 
                type="file" 
                name="listing[image]" 
                id="image" 
                class="form-control" 
                accept="image/*" 
                required
            >
            <div class="valid-feedback">Image uploaded successfully.</div>
            <div class="invalid-feedback">Please upload an image file.</div>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" id="price" class="form-control" placeholder="Enter price" required>
            <div class="valid-feedback">Price looks valid.</div>
            <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <!-- Country -->
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" id="country" class="form-control" placeholder="Enter country name" required>
            <div class="valid-feedback">Country looks good.</div>
            <div class="invalid-feedback">Please enter a country name.</div>
        </div> 

        <!-- Location -->
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" id="location" class="form-control" placeholder="Enter location" required>
            <div class="valid-feedback">Location looks good.</div>
            <div class="invalid-feedback">Please enter a location.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-danger custom-airbnb-btn">Add</button>
    </form>
</body>
